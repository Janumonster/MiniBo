<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.zzy.minibo">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_lanucher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".Activities.WebActivity"></activity>
        <activity android:name=".Activities.StatusEditActivity" />
        <activity android:name=".Activities.FriendshipActivity" />
        <activity android:name=".Activities.MessageActivity" /> <!-- 启动界面 -->
        <activity android:name=".Activities.LaunchActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- 授权页面 -->
        <activity android:name=".Activities.AuthActivity" /> <!-- 主界面 -->
        <activity android:name=".Activities.MainActivity" /> <!-- 图片界面 -->
        <activity
            android:name=".Activities.PicturesActivity"
            android:launchMode="singleTop" /> <!-- 微博界面 -->
        <activity android:name=".Activities.StatusActivity" /> <!-- 用户中心 -->
        <activity android:name=".Activities.UserCenterActivity" />
    </application>

</manifest>